<%- include ('styles'); %>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesión</title>
    <!-- Considera agregar un archivo CSS para estilos -->
    
</head>
<body>
    <h2>Iniciar Sesión</h2>
    <form action="/db/submit1" method="POST">
        <label for="selectedUserId">Selecciona tu usuario:</label>
        <select name="selectedUserId" id="selectedUserId" required>
            <% users.forEach(user => { %>
                <option value="<%= user._id %>"><%= user.us1 %></option>
            <% }); %>
        </select>
        <br><br>
        <label for="bd2">Contraseña:</label>
        <input type="password" name="bd2" id="bd2" required>
        <br><br>
        <button type="submit">Ingresar</button>
    </form>
</body>
</html>


